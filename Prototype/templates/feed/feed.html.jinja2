
{% extends 'base.html.jinja2' %}

{% block title %}
    <title>Feed</title>
{% endblock %}

{% block content %}
    <div class="d-flex justify-content-sm-center flex-wrap feed">
    {% for post in posts %}
        <div class="card post">
            <img src="../../static/pictures/98505f7.jpg" class="card-img-top" alt="Classy Pope">
            <div class="card-body">
                <blockquote class="blockquote mb-0">
                    <p>{{ post.description }}</p>
                    <footer class="blockquote-footer">{{ post.description }} | {{ post.date }}</footer>
                </blockquote>
            </div>
        </div>
    {%  endfor %}
    </div>
{% endblock %}