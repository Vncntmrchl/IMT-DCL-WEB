<div id="{{ post_card_id }}">
    <div class="card post">
        <img src="../../static/images_storage/{{ post.image_name }}" class="card-img-top" alt="Post {{ post.id }}">
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <div id="post_body">
                    <div class="d-flex justify-content-sm-between flex-wrap">
                        <p>{{ post.description }}</p>
                        <button id="{{ 'button'~post_card_id }}" onclick="heart_post({{ post.id }})"
                                class="heart-button" {% if post.current_user_liked_it %}
                                style="color: indianred" {% endif %}><i
                                class="bi bi-heart-fill"> {{ post.hearts }} </i></button>
                    </div>
                    <footer class="blockquote-footer">
                        <div class="d-flex justify-content-sm-between flex-wrap">
                            <p>{{ post.username }} | {{ post.date }}</p>
                            <button class="btn comment-button" data-bs-toggle="modal"
                                    data-bs-target="#{{ 'modal_'~post_card_id }}">
                                Commentaires
                            </button>
                        </div>
                    </footer>
                </div>
            </blockquote>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="{{ 'modal_'~post_card_id }}" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Post de {{ post.username }} | {{ post.date }}</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <img src="../../static/images_storage/{{ post.image_name }}" class="card-img-top"
                     alt="Post {{ post.id }}">
                <p style="margin-top: 1rem">{{ post.description }}</p>
            </div>
            <div class="modal-footer">
                <div class="container">
                    <h4 class="subsection-title">Commentaires</h4>
                    <ul class="list-group">
                        {% for comment in post.comments %}
                            <li class="list-group-item"><span
                                    style="font-weight: bold">{{ comment.username }}</span> ~ {{ comment.body }}
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="dropdown-divider"></div>
                <form class="container">
                    <div class="form-group">
                        <input type="text" class="form-control" id="{{ 'body'~post_card_id }}"
                               placeholder="Ajouter un commentaire">
                    </div>
                    <button onclick="add_comment({{ post.id }}, '{{ post_card_id }}')"
                            type="button"
                            class="btn btn-primary form-control comment-button">Commenter
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>